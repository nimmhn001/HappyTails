  <!--Grid row-->
  <div class="row">
  
  <!--Grid column-->
  <div class="col-lg-4">
  

  
  <div class="card">
         <!-- Card image -->
         <div class="view overlay">
             <img class="card-img-top" src="https://media.istockphoto.com/vectors/money-illustration-big-stack-of-dollars-and-golden-coins-wealth-and-vector-id1279341226?k=20&m=1279341226&s=612x612&w=0&h=XU-lmE0VunZSHBXYBk5xBnNT78Bd-QMr4uRlTFD9UAA=" alt="Card image cap">
             <a href="#!">
             <div class="mask rgba-white-slight"></div>
             </a>
         </div>
         <!-- Card content -->
         <div class="card-body">
             <!-- Title -->
             <h4 class="card-title">TOTAL SALES</h4>
             <!-- Text -->
             <h4 class="card-title">$<%=sales.totalSales%></h4>
             <!-- Button -->
             <a  href="/user/orders" class="btn btn-info">Check</a>
         
         </div>
   </div>
  
  </div>
  <!--Grid column-->
  
  <!--Grid column-->
  <div class="col-lg-4">
  
  
  <!-- Card -->
  <div class="card">
  
  <!-- Card image -->
  <%if(sales && sales.bestSelling){%>
  <div class="view overlay">
  <img class="card-img-top" style = "max-width: 50%; margin-left: 25%; margin-top: 2%;" src="<%=sales.bestSelling.imagePath%>" alt="Card image cap">
  <a href="#!">
   <div class="mask rgba-white-slight"></div>
  </a>
  </div>
  <%}%>
  <!-- Card content -->
  <div class="card-body">
  
  <!-- Title -->
  <h4 class="card-title">MOST DEMANDED</h4>
  <!-- Text -->
  <%if(sales && sales.bestSelling){%>
  <h4 class="card-title">Product Name: <%=sales.bestSelling.name%></h4>
  <h4 class="card-title">Count of sales: <%=sales.bestSelling.totalOrders%></h4>
    <!-- Button -->
  <a href="/products/<%=sales.bestSelling._id%>" class="btn btn-info">Check</a>
  <%}%>
  

  
  </div>
  
  </div>
  <!-- Card -->
  
  </div>
  <!--Grid column-->
  
  <!--Grid column-->
  <div class="col-lg-4">
  
 
  
