     <img class="card-img-top" src="https://media.istockphoto.com/videos/delivery-service-cartoon-man-riding-a-scooter-with-delivery-box-video-id1278446729?s=640x640" alt="Card image cap">
     <a href="#!">
       <div class="mask rgba-white-slight"></div>
     </a>
   </div>
  
   <!-- Card content -->
   <div class="card-body">
  
     <!-- Title -->
     <h4 class="card-title">TOTAL PURCHASES</h4>
     <!-- Text -->
     <h4 class="card-title"><%=sales.totalOrders%> Purchases</h4>
